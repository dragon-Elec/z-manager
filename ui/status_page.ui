<?xml version="1.0" encoding="UTF-8"?>
<!-- zman/ui/status_health_page.ui -->
<interface>
  <template class="StatusHealthPage" parent="AdwPreferencesPage">
    <property name="title">Status &amp; Health</property>
    <property name="icon-name">system-run-symbolic</property>

    <!-- Group 1: Actionable Health Alerts -->
    <child>
  <object class="AdwPreferencesGroup" id="health_alerts_group">
    <property name="title">Health Alerts</property>
    <!-- The banner is hidden by default. Python code will reveal it and set its content if health issues are found. -->
    <child>
      <object class="AdwBanner" id="health_alert_banner">
        <property name="title">Health Alert</property>
        <property name="button-label">Fix It</property>
        <property name="revealed">false</property>
      </object>
    </child>
  </object>
</child>

    <!-- Group 2: Real-time Device Status -->
    <child>
      <object class="AdwPreferencesGroup" id="device_list_group">
        <property name="title">Active ZRAM Devices</property>
        <property name="description">Real-time usage and statistics for each device.</property>
        
        <!-- This is a template for a device. Python code will clone this for each active ZRAM device. -->
        <child>
          <object class="AdwExpanderRow" id="zram0_expander_template">
            <property name="title">zram0</property>
            <property name="subtitle">45% Used | 3.51x Ratio</property>
            
            <!-- Suffix widget for the at-a-glance level bar -->
            <child type="suffix">
              <object class="GtkLevelBar" id="zram0_usage_bar">
                <property name="width-request">150</property>
                <property name="valign">center</property>
                <property name="min-value">0</property>
                <property name="max-value">100</property>
                <property name="value">45</property>
              </object>
            </child>

            <!-- Expanded Content: Detailed Stats -->
            <child>
              <object class="AdwActionRow" id="zram0_disk_size_row"><property name="title">Disk Size</property><property name="subtitle">4.0 GiB</property></object>
            </child>
            <child>
              <object class="AdwActionRow" id="zram0_algorithm_row"><property name="title">Compression Algorithm</property><property name="subtitle">zstd</property></object>
            </child>
            <child>
              <object class="AdwActionRow" id="zram0_compr_size_row"><property name="title">Compressed Size</property><property name="subtitle">512.2 MiB</property></object>
            </child>
            <child>
              <object class="AdwActionRow" id="zram0_data_size_row"><property name="title">Uncompressed Data Size</property><property name="subtitle">1.8 GiB</property></object>
            </child>
            <child>
              <object class="AdwActionRow" id="zram0_streams_row"><property name="title">Streams</property><property name="subtitle">4</property></object>
            </child>
            <child>
              <object class="AdwActionRow" id="zram0_writeback_row"><property name="title">Writeback Device</property><property name="subtitle">(none)</property></object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title">Recent Activity (60s)</property>
                <child type="suffix">
                  <object class="GtkFrame">
                    <property name="valign">center</property>
                    <child>
                      <object class="GtkDrawingArea" id="zram0_sparkline_graph">
                        <property name="content-width">200</property>
                        <property name="height-request">40</property>
                        <property name="tooltip-text">Live ZRAM usage over the last minute.</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object> 
        </child>

        <!-- This is shown when no ZRAM devices are active -->
        <child>
          <object class="AdwStatusPage" id="no_devices_status_page">
            <property name="title">No Active ZRAM Devices</property>
            <property name="description">ZRAM may not be configured or the kernel module is not loaded.</property>
            <property name="icon-name">drive-multidisk-symbolic</property>
            <property name="visible">false</property>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup" id="zswap_health_group">
        <property name="title">ZSwap Conflict Resolution</property>
        <property name="description">Permanently disable ZSwap for best ZRAM performance. This requires manual steps and a reboot.</property>
        <child>
          <object class="AdwActionRow" id="disable_zswap_row">
            <property name="title">ZSwap Status</property>
            <property name="subtitle">ZSwap should be disabled for optimal ZRAM performance.</property>
            <child type="suffix">
              <object class="GtkBox">
                <property name="valign">center</property>
                <child>
                    <object class="GtkImage" id="zswap_status_icon">
                        <property name="icon-name">emblem-ok-symbolic</property>
                    </object>
                </child>
                <child>
                    <object class="GtkButton" id="disable_zswap_button">
                        <property name="label">Disable...</property>
                        <property name="css-classes">destructive-action</property>
                        <property name="visible">false</property>
                        <property name="margin-start">12</property>
                    </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
            <object class="AdwBanner" id="zswap_warning_banner">
                <property name="title">⚠️ Final Steps Required!</property>
                <property name="button-label">Show Command</property>
                <property name="revealed">false</property>
            </object>
        </child>
      </object>
    </child>

    <!-- Group 4: System-wide Swap Context -->
    <child>
      <object class="AdwPreferencesGroup" id="swap_list_group">
        <property name="title">All System Swap Devices</property>
        <property name="description">Shows how ZRAM is prioritized against other swap spaces.</property>
        <!-- Python code will clear and populate this group with AdwActionRows -->
      </object>
    </child>
    
    <!-- Group 5: System Event Log -->
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title">System Health Events</property>
        <child>
          <object class="GtkScrolledWindow">
            <property name="min-content-height">150</property>
            <property name="max-content-height">300</property>
            <property name="hscrollbar-policy">never</property>
            <property name="child">
              <object class="GtkBox" id="event_log_container">
                <property name="orientation">vertical</property>
                <!-- Python code will populate this box with log entry rows -->
                <child>
                  <object class="AdwStatusPage" id="no_events_status_page">
                    <property name="icon-name">face-cool-symbolic</property>
                    <property name="title">No Issues Found</property>
                    <property name="description">The system journal contains no recent warnings or errors for ZRAM services.</property>
                    <property name="visible">true</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>

  
</interface>