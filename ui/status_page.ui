<!-- zman/ui/status_health_page.ui -->
<interface>
  <!-- interface-name status_page.ui -->
  <requires lib="gtk" version="4.10"/>
  <requires lib="libadwaita" version="1.7"/>
  <template class="StatusPage" parent="AdwBin">
    <child>
      <object class="GtkScrolledWindow">
        <property name="hscrollbar-policy">never</property>
        <property name="vscrollbar-policy">automatic</property>
        <child>
          <object class="GtkBox">
            <property name="margin-bottom">12</property>
            <property name="margin-end">12</property>
            <property name="margin-start">12</property>
            <property name="margin-top">12</property>
            <property name="orientation">vertical</property>
            <property name="spacing">12</property>

            <child>
              <object class="AdwPreferencesGroup" id="device_list_group">
                <property name="description">Real-time usage and statistics for each device.</property>
                <property name="title">Active ZRAM Devices</property>
                <!-- Rows will be added dynamically here -->
              </object>
            </child>
            <child>
              <!-- This is the NEW compact placeholder widget, MOVED OUTSIDE group for cleaner hiding -->
              <object class="GtkBox" id="no_devices_status_page">
                <property name="vexpand">true</property>
                <property name="orientation">vertical</property>
                <property name="spacing">6</property>
                <property name="halign">center</property>
                <property name="valign">center</property>
                <property name="margin-top">24</property>
                <property name="margin-bottom">24</property>
                <property name="visible">false</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">drive-multidisk-symbolic</property>
                    <property name="pixel-size">64</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="no_devices_label">
                    <property name="label">No Active ZRAM Devices Found</property>
                    <attributes>
                      <attribute name="weight" value="bold"></attribute>
                    </attributes>
                    <style>
                      <class name="title-2"/>
                    </style>
                  </object>
                </child>
                <child>
                   <object class="GtkButton">
                     <property name="label">Create New Device</property>
                     <property name="halign">center</property>
                     <property name="margin-top">12</property>
                     <property name="action-name">app.show-configure</property> 
                     <style>
                       <class name="pill"/>
                       <class name="suggested-action"/>
                     </style>
                   </object>
                </child>
              </object>
            </child>


            <child>
              <object class="AdwPreferencesGroup" id="swap_list_group">
                <property name="description">Shows how ZRAM is prioritized against other swap spaces.</property>
                <property name="title">All System Swap Devices</property>
              </object>
            </child>

          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
