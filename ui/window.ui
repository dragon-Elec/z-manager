<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="AdwApplicationWindow" id="main_window">
    <property name="default-width">700</property>
    <property name="default-height">600</property>
    <property name="content">
      <!-- 
        AdwToolbarView is a great top-level widget. It gives you a main
        content area and slots for top, bottom, left, or right bars.
      -->
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar" id="header_bar">
            <!-- 
              This button is the "hamburger menu" that will toggle the 
              sidebar's visibility on narrow screens.
            -->
            <child type="start">
                <object class="GtkToggleButton" id="sidebar_toggle_button">
                    <property name="icon-name">open-menu-symbolic</property>
                    <property name="tooltip-text">Show/Hide Sidebar</property>
                </object>
            </child>
            <!-- 
              The AdwViewSwitcher is the "tab bar" you were looking for.
              It will automatically show buttons for each page in the stack.
              On narrow screens, it becomes a dropdown menu.
            -->
            <property name="title-widget">
              <object class="AdwViewSwitcher" id="view_switcher"/>
            </property>
          </object>
        </child>

        <!-- 
          AdwNavigationSplitView is the core of the adaptive layout.
          It manages the collapsible sidebar and the main content area.
        -->
        <child>
          <object class="AdwNavigationSplitView" id="split_view">
            <property name="sidebar">
              <!-- 
                The sidebar area. We'll add our navigation listbox here.
                The AdwNavigationPage provides the correct styling.
              -->
              <object class="AdwNavigationPage">
                <property name="title">Navigate</property>
                <property name="child">
                    <object class="GtkScrolledWindow">
                        <property name="child">
                            <object class="GtkListBox" id="nav_listbox">
                                <property name="selection-mode">single</property>
                                <property name="css-classes">navigation-sidebar</property>
                            </object>
                        </property>
                    </object>
                </property>
              </object>
            </property>

            <property name="content">
              <!-- 
                The main content area. This stack will hold your pages
                (Status, Configure, Tune).
              -->
              <object class="AdwViewStack" id="view_stack"/>
            </property>

          </object>
        </child>
      </object>
    </property>
  </object>
</interface>